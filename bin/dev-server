#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
include FileUtils

APP_ROOT = Pathname.new File.expand_path('..', __dir__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  puts "\n## Install node modules"
  system!('cd client && npm install')

  puts "\n## Run Sphinx index"
  system!('bundle exec rake ts:index')

  puts "\n## Start the Sphinx daemon"
  system!('bundle exec rake ts:start')

  puts "\n## Start the development server"
  system!('foreman start -f Procfile.hot')

  # @see https://github.com/aldagram/sharetribe#working-with-react-webpack-and-foreman
  # system!('bundle exec rails s -p 3000 -b 0.0.0.0')

  puts "\n## Invoke the delayed job worker in a new console (open the project root folder)"
  system!('bundle exec rake jobs:work')
end

